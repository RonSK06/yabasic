#!./yabasic

for i=1 to 15
  read f$,e$
  if i > 11 then
    read x
    r$ = str$(x,f$)
  elsif i > 9
    read p$
    r$ = str$(1000*pi,f$,p$)
  else
    r$ = str$(1000*pi,f$)
  fi
  if  r$ <> e$ error "Format " + str$(i) + ": " + f$ + " Expected " + e$ + ", but got: " + r$ + "."
next i 


